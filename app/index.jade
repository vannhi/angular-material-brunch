doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='width=device-width', initial-scale='1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    title(ng-bind-template='{{pageTitle}}')
    link(rel='stylesheet', href='/css/vendor.css')

  body(ng-app='app', layout="column")
    md-toolbar(layout="row", layout-align="start center", ng-include="'app/sections/navbar/partials/nav.jade'")
    md-content.md-padding
      div(ng-view)
      div Angular Material Brunch app: v<span app-version></span>

    md-toolbar(layout="row", layout-align="start center")
      md-button(href='https://github.com/vannhi/angular-material-brunch.git')
        span.md-caption angular-material-brunch | source

    //if lte IE 7
      script(src='http://cdnjs.cloudflare.com/ajax/libs/json2/20110223/json2.js')
    //if lte IE 8
      script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')

    script(src='/js/vendor.js')
    script(src='/js/app.templates.js')
    script(src='/js/app.js')
